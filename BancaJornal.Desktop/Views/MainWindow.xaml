<Window x:Class="BancaJornal.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:BancaJornal.Desktop.Views"
        xmlns:vm="clr-namespace:BancaJornal.Desktop.ViewModels"
        Title="{Binding Titulo}" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- DataTemplates para cada ViewModel -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ProdutoViewModel}">
            <views:ProdutoView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:VendaViewModel}">
            <views:VendaView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu superior -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="Dashboard" Command="{Binding NavegarParaDashboardCommand}" 
                        Width="120" Background="#1976D2"/>
                <Button Content="Produtos" Command="{Binding NavegarParaProdutosCommand}" 
                        Width="120" Background="#1976D2"/>
                <Button Content="Nova Venda" Command="{Binding NavegarParaVendasCommand}" 
                        Width="120" Background="#43A047"/>
            </StackPanel>
        </Border>

        <!-- Área de conteúdo -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}" 
                        Margin="10"/>
    </Grid>
</Window>
